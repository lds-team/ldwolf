<?xml version="1.0" encoding="utf-8"?><!--<merge>-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/giuso_type_delo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <TextView
        android:id="@+id/suadangiuso_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray"
        android:padding="5dp"
        android:text="Giữ đề, lô:"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/suadangiuso_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/suadangiuso_buttongroup"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/suadangiuso_text1"
        android:layout_toStartOf="@+id/suadangiuso_radiogroup"
        android:hint="Nhập dàn:\nVD: đầu 234 x 100n\nđầu 1234567 ghép đít 456789 x 50"
        android:textSize="14sp" />

    <RadioGroup
        android:id="@+id/suadangiuso_radiogroup"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/suadangiuso_text1"
        android:gravity="top"
        android:minHeight="140dp">

        <RadioButton
            android:id="@+id/suadangiuso_typede"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Đề" />

        <RadioButton
            android:id="@+id/suadangiuso_typelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lô" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đề đầu ĐB"
            android:visibility="gone" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đề đầu G1"
            android:visibility="gone" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đề đuôi G1"
            android:visibility="gone" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/suadangiuso_buttongroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/suadangiuso_radiogroup">

        <Button
            android:id="@+id/delo_suadan_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Sửa dàn giữ số"
            android:textColor="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/delo_xoadan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xóa"
            android:textColor="@android:color/holo_red_dark" />
    </LinearLayout>
</RelativeLayout><!--</merge>-->
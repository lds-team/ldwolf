<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_bg_normal"
    android:orientation="vertical"
    android:padding="5dp">

    <EditText
        android:id="@+id/dialog_addregextext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cú pháp gốc"
        android:maxHeight="150dp"
        android:minHeight="50dp" />

    <EditText
        android:id="@+id/dialog_addregexcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cú pháp mới"
        android:maxHeight="150dp"
        android:minHeight="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_addregexsave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:text="Save" />

        <Button
            android:id="@+id/dialog_addregexcancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:text="Xóa" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_addregexnotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chú ý: Bạn đang thêm ký tự đặc biêt.\nChúng tôi sẽ không chịu trách nhiệm nếu xảy ra lỗi."
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone" />

    <ListView
        android:id="@+id/dialog_addregexlist"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
</LinearLayout>